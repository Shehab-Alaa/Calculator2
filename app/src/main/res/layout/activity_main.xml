<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.calculator.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1.2">

    <TextView
        android:id="@+id/edit_calc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f6"
        android:defaultFocusHighlightEnabled="true"
        android:focusedByDefault="true"
        android:gravity="right"
        android:paddingRight="5dp"
        android:textColor="#22474f"
        android:textSize="35dp"
        android:freezesText="true"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f6"
        android:defaultFocusHighlightEnabled="true"
        android:focusedByDefault="true"
        android:gravity="right"
        android:textColor="#4da1b2"
        android:textSize="45dp"
        android:paddingRight="5dp"
        android:freezesText="true"
        />

</LinearLayout>

    <LinearLayout
        android:id="@+id/calc_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/c_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:cursorVisible="false"
                android:defaultFocusHighlightEnabled="false"
                android:focusableInTouchMode="false"
                android:focusedByDefault="false"
                android:text="C"
                android:textColor="#4da1b2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/div_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="/"
                android:textColor="#c66956"
                android:textSize="30dp" />

            <Button
                android:id="@+id/mult_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="X"
                android:textColor="#c66956"
                android:textSize="30dp" />

            <Button
                android:id="@+id/del_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="CE"
                android:textColor="#4da1b2"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="7"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="8"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/nine_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="9"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="-"
                android:textColor="#c66956"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="4"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/five_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="5"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/six_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="6"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/plus_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="+"
                android:textColor="#c66956"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="1"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/two_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="2"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/three_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="3"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/braces_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="( )"
                android:textColor="#c66956"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="0"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/dot_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="."
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/pom_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_buttons2"
                android:text="+/-"
                android:textColor="#22474f"
                android:textSize="30dp" />

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:text="="
                android:textColor="#4da1b2"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
